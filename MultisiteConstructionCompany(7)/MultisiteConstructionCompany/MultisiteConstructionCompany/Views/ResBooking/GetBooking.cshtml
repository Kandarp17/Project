@using MultisiteConstructionCompany.Models
@using System.Data
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "GetBooking";
    Site s = new Site();
    DataTable dt = s.SelectAll();
}

<div id="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Search Resource</h3>
                    </div>
                    <div class="panel-body">
                        <form id="defaultForm" method="post" class="form-horizontal ls_form" action="/ResBooking/GetBooking" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Search Booking by Site</label>
                                <div class="col-lg-6">
                                    @Html.DropDownList("SiteID", new SelectList(dt.DefaultView, "SiteID", "Name"), "Select Site to get Booking", new { @class = "form-control" })
                                </div>
                                <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                            @if (TempData["Message"] != null)
                            {
                                <p style="margin-left:3.5in;color:red">@TempData["Message"]</p>
                            }
                        </form>
                        </div>
                    </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Booking Table</h3>
                            </div>
                            <div class="panel-body">
                                <!--Table Wrapper Start-->
                                <div class="table-responsive ls-table">
                                    @if (TempData["Success"] != null)
                                    {
                                        <p align="left">@TempData["Success"]</p>
                                    }
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Sr No</th>
                                                <th>Resource Name</th>
                                                <th>Required Date</th>
                                                <th>Site Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 1; i <= Model.Rows.Count; i++)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@Model.Rows[i-1]["RName"]</td>
                                                    <td>@(Convert.ToDateTime(Model.Rows[i-1]["RequiredDate"]).ToString("dd-MM-yyyy") )</td>
                                                    <td>@Model.Rows[i-1]["SName"]</td>
                                                    <td><a href="/ResBooking/CancelBooking/@Model.Rows[i-1]["ResBookingID"]" onclick="return confirm('Are you sure?')">Cancel</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!--Table Wrapper Finish-->
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content Element  End-->
            </div>
</div>

