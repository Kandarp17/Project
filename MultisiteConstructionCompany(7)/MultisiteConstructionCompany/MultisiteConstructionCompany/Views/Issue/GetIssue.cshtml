
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "GetIssue";
}




<div id="main-content">
    <div class="container-fluid">
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>@Model.Rows[i]["Title"]<span style="float:right">@Model.Rows[i]["Status"]</span></h3>
                        </div>
                        <div class="panel-body">
                            <div class="click2edit">
                                <p style="border:thin"> @Model.Rows[i]["Details"]<br /></p>
                                <p style="font-size:smaller;">
                                    Issue made by -->
                                    @Model.Rows[i]["SName"],
                                    @Model.Rows[i]["StaffType"],
                                    @Model.Rows[i]["SiteName"],
                                    @Model.Rows[i]["ReportingTime"].ToString("dd-MM-yyyy")
                                </p>
                            </div>

                            @if (Model.Rows[i]["Status"] != "Pending")
                            {
                                <a href="/Issue/ReplyIssue/@Model.Rows[i]["IssueID"]" style="text-align:right">View Reply</a>
                            }
                            else
                            {
                                <div class="summerNoteToolBox">
                                    <a href="/Issue/ReplyIssue/@Model.Rows[i]["IssueID"]"><button id="edit" class="btn btn-primary btn-xs" style="font-size:12px">Reply Issue</button></a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
