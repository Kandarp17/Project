@model MultisiteConstructionCompany.Models.Site
@using System.Data
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "StaffDetail";
    DataTable dt = ViewBag.dt;
}


<div id="main-content">
    <div class="container-fluid">
        <!-- Main Content Element  Start-->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Site Details</h3>
                    </div>
                    <div class="panel-body">
                        <form id="defaultForm" method="post" class="form-horizontal ls_form" action="/Site/Insert"
                              data-bv-message="This value is not valid"
                              data-bv-feedbackicons-valid="fa fa-check"
                              data-bv-feedbackicons-invalid="fa fa-bug"
                              data-bv-feedbackicons-validating="fa fa-refresh" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Name</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" value="@Model.Name" name="Name" placeholder="Name" data-bv-notempty-message="Name is required and cannot be empty" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Address</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="Address" value="@Model.Address" placeholder="Address" required data-bv-notempty-message="Name is required and cannot be empty" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Area</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="Area" value="@Model.Area" placeholder="Area" required data-bv-notempty-message="Mobile is required and cannot be empty" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">City</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="City" value="@Model.City" placeholder="City" required data-bv-notempty-message="Department is required and cannot be empty" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Phone</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="Phone" value="@Model.Phone" placeholder="Phone" />
                                </div>
                            </div>
                            @if (Model.SiteID == 0)
                            {


                            <div class="form-group">
                                <label class="col-lg-3 control-label">Start Date</label>
                                <div class="col-lg-6">
                                    <input class="form-control datePickerOnly" type="text" name="StartDate" value="@Model.StartDate"/>
                                </div>
                            </div> 
                            <div class="form-group">
                                <label class="col-lg-3 control-label">End Date</label>
                                <div class="col-lg-6">
                                    <input class="form-control datePickerOnly" type="text" name="EndDate" value="@Model.EndDate"/>
                                </div>
                            </div>
                            }

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Status</label>
                                <div class="col-lg-6">
                                    <select class="form-control" name="Status">
                                        <option value="@Model.Status">@Model.Status</option>
                                        <option>Active</option>
                                        <option>Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Details</label>
                                <div class="col-lg-6">
                                    <input type="text" class="form-control" name="Details" value="@Model.Details" placeholder="Details" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-3 control-label">Photo</label>
                                <div class="col-lg-6">
                                    <input type="file" name="PhotoPath" value="Browse" />
                                </div>
                            </div>
                            @if (Model.SiteID == 0)
                            {

                            <div class="form-group">
                                <label class="col-lg-3 control-label">Contractor</label>
                                <div class="col-lg-6">
                                    @Html.DropDownList("StaffID", new SelectList(dt.DefaultView, "StaffID", "Name"), "Select Contractor", new { @class = "form-control" })
                                </div>
                            </div>
                            }
                            <input type="hidden" name="SiteID" value="@Model.SiteID" />
                            <div class="form-group">
                                <div class="col-lg-9 col-lg-offset-3">
                                    @if (Model.SiteID == 0)
                                    {
                                        <button type="submit" class="btn btn-primary">Add</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary">Update</button>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>



