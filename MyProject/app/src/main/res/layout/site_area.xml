<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <TextView
            android:text="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:gravity="fill_vertical"
            android:textColor="#C0C0C0"
            android:layout_marginLeft="10dp"
            android:id="@+id/labaddress"/>
    <TextView
        android:text="BITS Edu Campus,babaria institute of technology,  Vadodara-Mumbai National Highway 8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:gravity="fill_vertical"
        android:textColor="@color/text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/layaddress"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4a5a71"></LinearLayout>



        <TextView
            android:text="Area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="17dp"
            android:gravity="fill_vertical"
            android:textColor="#C0C0C0"
            android:id="@+id/labarea"/>

    <TextView
        android:text="Varnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:gravity="fill_vertical"
        android:textColor="@color/text"
        android:id="@+id/layarea"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4a5a71"></LinearLayout>



        <TextView
            android:text="City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="17dp"
            android:gravity="fill_vertical"
            android:textColor="#C0C0C0"
            android:id="@+id/labcity"/>
    <TextView
        android:text="Vadodara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:gravity="fill_vertical"
        android:textColor="@color/text"
        android:id="@+id/laycity"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4a5a71"></LinearLayout>



</LinearLayout>

