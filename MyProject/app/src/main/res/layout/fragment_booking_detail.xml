
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scrollbars="none"
                tools:context="com.example.patel_000.myproject.BookingDetailFragment" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/colorPrimaryDark">

                    <!-- TODO: Update blank fragment layout -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/requireddate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@color/colorPrimary"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="Required Date"
                            android:textColor="#c0c0c0"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/requireddatevalue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="5dp"
                            android:text="TextView"
                            android:textColor="@color/text"
                            android:textSize="22dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:background="#4a5a71"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rname"
                                android:layout_margin="10dp"
                                android:textSize="18dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="#c0c0c0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="Resource Name" />

                            <TextView
                                android:id="@+id/rnamevalue"
                                android:layout_marginTop="5dp"
                                android:textSize="22dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="TextView" />
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#4a5a71"></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/resourceid"
                                android:layout_margin="10dp"
                                android:textSize="18dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="#c0c0c0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="Resource ID" />

                            <TextView
                                android:id="@+id/resourceidvalue"
                                android:layout_marginTop="5dp"
                                android:textSize="22dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="04" />
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#4a5a71"></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sname"
                                android:layout_margin="10dp"
                                android:textSize="18dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="#c0c0c0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="Site Name" />

                            <TextView
                                android:id="@+id/snamevalue"
                                android:layout_marginTop="5dp"
                                android:textSize="22dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="infi123infi" />
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#4a5a71"></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/status"
                                android:layout_margin="10dp"
                                android:textSize="18dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textColor="#c0c0c0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="Status" />

                            <TextView
                                android:id="@+id/statusvalue"
                                android:layout_marginTop="5dp"
                                android:textSize="22dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="5dp"
                                android:textColor="@color/text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Booked/Cancel" />
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#4a5a71"></LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/comments"
                                    android:layout_margin="10dp"
                                    android:textSize="18dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"
                                    android:textColor="#c0c0c0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorPrimary"
                                    android:text="Comments" />

                                <TextView
                                    android:id="@+id/commentsvalue"
                                    android:layout_marginTop="5dp"
                                    android:textSize="22dp"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="5dp"
                                    android:textColor="@color/text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="You need update" />
                                <LinearLayout
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#4a5a71"></LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/bookingdate"
                            android:layout_margin="10dp"
                            android:textSize="18dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textColor="#c0c0c0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="Booking Date" />

                        <TextView
                            android:id="@+id/bookingdatevalue"
                            android:layout_marginTop="5dp"
                            android:textSize="22dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="5dp"
                            android:inputType="date"
                            android:textColor="@color/text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="31/12/2016" />
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#4a5a71"></LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

